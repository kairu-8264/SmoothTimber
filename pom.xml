            <url>https://repo.md-5.net/content/repositories/public/</url>
        </repository>
        <!-- FactionsUUID Repo -->
        <repository>
            <id>moss-repo</id>
            <url>https://ci.ender.zone/plugin/repository/everything/</url>
        </repository>
        <!-- MCMMO Repo -->
        <repository>
            <id>neetgames</id>
            <url>https://nexus.neetgames.com/repository/maven-releases/</url>
        </repository>
    </repositories>

